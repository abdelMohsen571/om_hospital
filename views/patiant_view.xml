<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_hospital_patiant_form" model="ir.ui.view">
        <field name="name">hospital.patiant.form</field>
        <field name='model'>hospital.patiant</field>
        <field name='arch' type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="age"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_hospital_patiant_tree" model="ir.ui.view">
        <field name="name">hospital.patiant.form</field>
        <field name='model'>hospital.patiant</field>
        <field name='arch' type="xml">
            <tree>
                <field name="name"/>
                <field name="age"/>
            </tree>
        </field>
    </record>

    <record id="view_hospital_patiant_search" model="ir.ui.view">
        <field name="name">hospital.patiant.search</field>
        <field name='model'>hospital.patiant</field>
        <field name='arch' type="xml">
            <search>
                <field name="name" filter_domain="['|',('name','ilike','self),('age','ilike','self) ]"/>
                <field name="age"/>
            </search>
        </field>
    </record>

    <record id="action_patiant_hospital" model="ir.actions.act_window">
        <field name="name">Patiant</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.patiant</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first pationt!
            </p>
        </field>
    </record>

    <menuitem id="patiant_menu"
              name="Patiants"
              sequence="0"
              parent="patiant_root_menu"
              action="action_patiant_hospital"/>
</odoo>