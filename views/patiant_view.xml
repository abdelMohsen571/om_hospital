<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_hospital_patiant_form" model="ir.ui.view">
        <field name="name">hospital.patiant.form</field>
        <field name='model'>hospital.patiant</field>
        <field name='arch' type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="ref"/>
                        <field name="date_of_birth"/>
                        <field name="age"/>
                        <field name="gender"/>
                        <field name="active"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                        <field name="message_follower_ids" options="{'open_attachments': True}"/>
                        <field name="message_ids"/>
                    </div>
            </form>
        </field>
    </record>
    <record id="view_hospital_patiant_tree" model="ir.ui.view">
        <field name="name">hospital.patiant.form</field>
        <field name='model'>hospital.patiant</field>
        <field name='arch' type="xml">
            <tree>
                <field name="name"/>
                <field name="ref"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="view_hospital_patiant_search" model="ir.ui.view">
        <field name="name">hospital.patiant.search</field>
        <field name='model'>hospital.patiant</field>
        <field name='arch' type="xml">
            <search>
                <field name="name" filter_domain="['|',('name','ilike','self),('age','ilike','self) ]"/>
                <field name="age"/>

                <filter name="is_male" string="Is Male" domain="[('gender','=','male')]"/>
                <filter name="is_female" string="Is Female" domain="[('gender','=','female')]"/>
                <separator/>
                <filter name="is_kids" string="Is Kiss" domain="[('age','&lt;=','5')]"/>
                <separator/>
                <filter name="archived_filter" string="Archived" domain="[('active','=','true')]"/>

                    <group expand="0" string="">
                        <filter name="age_group" string="age" context="{'group_by':'age'}"/>
                    </group>
                <searchpanel>
                        <field name="gender" string="Categories" select='multi'  icon="fa-users" enable_counters="1"/>
                    </searchpanel>

            </search>
        </field>
    </record>

    <record id="action_patiant_hospital" model="ir.actions.act_window">
        <field name="name">Patiant</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.patiant</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_is_male':1 ,'search_default_age_group':1  }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first pationt!
            </p>
        </field>
    </record>

    <menuitem id="patiant_menu"
              name="Patiants"
              sequence="0"
              parent="patiant_root_menu"
              action="action_patiant_hospital"/>
</odoo>