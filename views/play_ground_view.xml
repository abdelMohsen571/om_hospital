<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="play_ground_form" model="ir.ui.view">
        <field name="name">play.ground.form</field>
        <field name='model'>play.ground</field>
        <field name='arch' type="xml">
            <form delete="0">
                <sheet>
                    <group>
                        <field name="model_id"/>
                        <field name="code" widget="ace" options="{'mode':'python'}"/>
                    </group>
                    <group>
                        <button string="Excute" name="action_excute" type="object" class="btn-primary"
                                data-hotkey="q"/>

                    </group>
                    <group>
                        <field name="result"/>

                    </group>

                </sheet>
            </form>
        </field>
    </record>
    <record id="play_ground_tree" model="ir.ui.view">
        <field name="name">play.ground.tree</field>
        <field name='model'>play.ground</field>
        <field name='arch' type="xml">
            <tree>
                <field name="model_id"/>
            </tree>
        </field>
    </record>


    <record id="action_play_ground" model="ir.actions.act_window">
        <field name="name">play.ground</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">play.ground</field>
        <field name="view_mode">tree,form</field>
        <field name="target">inline</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first sale!
            </p>
        </field>
    </record>
    <menuitem id="play_ground_menu" name="play.ground" sequence="1" parent="technical_menu"
              action="action_play_ground"/>


</odoo>