<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="patient_tags_form" model="ir.ui.view">
        <field name="name">patient.tags.form</field>
        <field name='model'>patient.tags</field>
        <field name='arch' type="xml">
            <form delete="0">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="active" widget="boolean_toggle"/>
                        <field name="color" widget="color_picker"/>
                    </group>
                    <notebook>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>
    <record id="patient_tags_tree" model="ir.ui.view">
        <field name="name">patient.tags.tree</field>
        <field name='model'>patient.tags</field>
        <field name='arch' type="xml">
            <tree>
                <field name="name"/>
                <field name="color"  widget="color_picker"/>
                <field name="active"/>

            </tree>
        </field>
    </record>

    <record id="patient_tags_search" model="ir.ui.view">
        <field name="name">patient.tags.search</field>
        <field name='model'>patient.tags</field>
        <field name='arch' type="xml">
            <search>

            </search>
        </field>
    </record>

    <record id="action_patient_tags" model="ir.actions.act_window">
        <field name="name">Property Tags</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">patient.tags</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first sale!
            </p>
        </field>
    </record>

    <menuitem id="patient_tags_menu"
              name="Patient Tags"
              sequence="2"
              parent="menu_configuration"
              action="action_patient_tags"/>
</odoo>