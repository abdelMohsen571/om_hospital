<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_hospital_appointment_form" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name='model'>hospital.appointment</field>
        <field name='arch' type="xml">
            <form delete="0">
                <sheet>
                    <div>
                        <h1>
                            <field name="priority" widget="priority"/>

                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="patiant_id"/>
                            <field name="ref"/>
                            <field name="booking_date"/>
                            <field name="gender"/>
                        </group>
                        <group>
                            <field name="appointment_time"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Prescription" name="prescription">
                            <group>
                                <field name="prescription" placeholder="Enter your prescription"/>
                            </group>
                        </page>
                        <page string="Pharmacy" name="pharmacy">
                            <group>
                                <field name="ref"/>
                            </group>
                        </page>
                    </notebook>


                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" options="{'open_attachments': True}"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="view_hospital_appointment_tree" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name='model'>hospital.appointment</field>
        <field name='arch' type="xml">
            <tree>
                <field name="patiant_id"/>
                <field name="ref"/>
                <field name="appointment_time"/>
                <field name="booking_date"/>
                <field name="gender"/>
            </tree>
        </field>
    </record>

    <record id="view_hospital_appointment_search" model="ir.ui.view">
        <field name="name">hospital.appointment.search</field>
        <field name='model'>hospital.appointment</field>
        <field name='arch' type="xml">
            <search>
            </search>
        </field>
    </record>

    <record id="action_appointment_hospital" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Appintment!
            </p>
        </field>
    </record>

    <menuitem id="appointment_menu"
              name="Appointments"
              sequence="0"
              parent="appointment_root_menu"
              action="action_appointment_hospital"/>
</odoo>