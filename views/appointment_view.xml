<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_hospital_appointment_form" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name='model'>hospital.appointment</field>
        <field name='arch' type="xml">
            <form delete="0">
                <sheet>

                    <header>
                        <field name="state" widget="statusbar" nolabel="1"
                               statusbar_visible="draft,waiting,done"/>
                        <button string="In Consultaoin" name="action_waiting" type="object" states="draft"
                                class="oe_highlight" data-hotkey="w"/>
                        <button string="Mark As Done" name="action_done" type="object" states="waiting"
                                class="oe_highlight" data-hotkey="d"/>
                        <button string="Cancel" name="action_cancel" type="object" states="draft,waiting"
                                data-hotkey="c" context="{'default_appointment_id':active_id}"/>
                        <button string="Reset To Draft" name="action_draft" type="object" states="cancel"
                                data-hotkey="t"/>
                    </header>
                    <div>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <h1>
                            <field name="priority" widget="priority"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="doctor_id" widget="many2one_avatar_user"/>
                            <field name="patiant_id" default_focus="1"/>
                            <field name="ref"/>
                            <field name="booking_date"/>
                            <field name="activity_ids"/>
                            <field name="gender"/>
                        </group>
                        <group>
                            <field name="appointment_time"/>
                            <field name="hide_sale_price" groups="base.group_no_one"/>
                        </group>
                        <group>
                            <button name="action_test" string="object Button" type="object" class="oe_highlight"/>
                            <button name="%(om_hospital.action_patiant_hospital)d"
                                    string="action Button"
                                    type="action"
                                    confirm="Are u sure"
                                    help="help message"
                                    class="oe_highlight"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Prescription" name="prescription">
                            <group>
                                <field name="prescription" placeholder="Enter your prescription"
                                       optional="{'collaborative:True , 'resizable':True}"/>
                            </group>
                        </page>
                        <page string="Pharmacy" name="pharmacy">
                            <group>
                                <field name="pharmacy_lines_ids">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="price_unit"
                                               attrs="{'column_invisible': [('parent.hide_sale_price', '=', True)]}"/>
                                        <field name="qty"/>
                                        <field name="appointment_id"/>
                                    </tree>
                                    <form>
                                        <field name="product_id"/>
                                        <field name="price_unit"/>
                                        <field name="qty"/>
                                        <field name="appointment_id"/>

                                    </form>
                                </field>
                            </group>
                        </page>
                    </notebook>


                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" options="{'open_attachments': True}"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="view_hospital_appointment_tree" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name='model'>hospital.appointment</field>
        <field name='arch' type="xml">
            <tree decoration-success="state =='done'" decoration-danger="state =='canceled'"
                  decoration-warning="state =='waiting'" sample="1" multi_edit="1">
                <field name="patiant_id"/>
                <field name="doctor_id" widget="many2one_avatar_user"/>
                <field name="ref"/>
                <field name="appointment_time" optional="hide"/>
                <field name="booking_date"/>
                <field name="activity_ids" widget="list_activity"/>
                <field name="gender" optional="show"/>
                <field name="state" decoration-success="state =='done'"
                       decoration-info="state == 'draft' or state == 'waiting'"
                       widget="badge" optional="show"/>
            </tree>
        </field>
    </record>
    <record id="hr_employee_view_activity" model="ir.ui.view">
        <field name="name">hospital.appointment.activity</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <activity string="Appointment">
                <field name="id"/>
                <templates>
                    <div t-name="activity-box">
                        <img class="rounded"
                             t-att-src="activity_image('hospital.patiant', 'img', record.patiant_id.raw_value)"
                             t-att-title="record.patiant_id.value" t-att-alt="record.patiant_id.value"/>
                        <div class="ms-2">
                            <field name="patiant_id" display="full" class="o_text_block"/>
                            <!--                            <field name="job_id" muted="1" display="full" class="o_text_block"/>-->
                        </div>
                    </div>
                </templates>
            </activity>
        </field>
    </record>


