<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="create_appointment_wizard_view" model="ir.ui.view">
        <field name="name">create.appointment.wizard</field>
        <field name="model">create.appointment.wizard</field>
        <field name="arch" type="xml">
            <form string="create.appointment">
                create your own appointment
                <br/>
                don't hesitate to call us on 011111111111111
                <br/>

                <field name="name"/>
                <field name="patiant_id"/>
                <footer>
                    <button name="create_appointment" type="object" data-hotkey="q"
                            string="Confirm" class="oe_highlight"/>

                    <button special="cancel" data-hotkey="x" string="Cancel"/>
                </footer>

            </form>
        </field>
    </record>

    <record id="create_appointment_wizard_action" model="ir.actions.act_window">
        <field name="name">Create Appointment</field>
        <field name="res_model">create.appointment.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="create_appointment_wizard_view"/>
        <field name="target">new</field>
    </record>

    <menuitem id="create_appointment_menu"
              name="Create Appointment"
              parent="appointment_root_menu"
              action="create_appointment_wizard_action"/>
</odoo>
